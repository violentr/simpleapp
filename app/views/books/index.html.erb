<% if @books.blank? %>
	<p>There are not any books currentlly in the system </p>
	<% else %>
	<ul id="books">
	<% @books.each do |c| %>
		<li><%=link_to c.title, {:action => 'show', :id =>c.id} %></li>
		<% end %>
	</ul>
	<ul id="subjects">
		<% @subjects.each do |c| %>
	<li><%= link_to c.name, :action => "show_subjects", 
		:id => c.id %></li>
	<% end %>
	</ul>
<% end %>
	<p><%= link_to "Add new book",{:action => 'new'} %></p>
	<p><%= link_to "Show thoughts",{:controller =>'thoughts',:action => 'index'} %></p>
